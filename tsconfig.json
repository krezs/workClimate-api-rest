{
   "compilerOptions": {
     "module": "commonjs",
     "target": "es6",
     "noImplicitAny": true,
     "moduleResolution": "node",
     "resolveJsonModule": true,
     "esModuleInterop": true,
     "sourceMap": true,
     "outDir": "dist",
     "baseUrl": ".",
     "paths": {
       "*": [
         "node_modules/*",
         "src/types/*"
       ]
     },
     "lib": [
       "es6",
       "es5"
     ],
     "typeRoots": [
       "./node_modules/@types"
     ],
     "emitDecoratorMetadata": true,
     "experimentalDecorators": true
   },
   "include": [
     "src/**/*"
   ],
   "exclude": [
     "dist/"
   ]
  }